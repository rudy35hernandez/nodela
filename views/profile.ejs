<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/main.css" />
    <noscript><link rel="stylesheet" href="css/noscript.css" /></noscript>
    <title>Profile</title>
</head>
<body class="profile">
    <section>
    <div id="topList">
        <ul class="noStyle">
            <li> <a href="/">Home</a></li>
            <li><a href="/feed">Feed</a></li>
            <li> <a href="logout">Logout</a></li>
        </ul>
    </div>
    <header class="major align-center">
        <h1>Post your Nodela <%= user.nodellaUsername %> </h1>
</header>


<article class="story">
    
    <form action="/posts/createPost" method="POST">
        <label for="title" class="profileHeader">Title</label>
        <input
            type="text"
            name="title"
            id="push-title"
            minlength="10"
            required
            />
            <br>
        <label for="story" class="profileHeader">My Story</label>
        <textarea 
        name="story" 
        id="push-story" 
        rows="4" cols="4" 
        minlength="10" 
        placeholder="story here" 
        required></textarea> 
    <br>
    <input 
        class="button primary icon solid"
        id="submit"
        type="submit"
        value="Post"/>

    </form>
</article>

<section class="newPost">
    <ul>
      <% if(posts) { %>
      <% posts.forEach(el => { %>
     
          <li class="postsList" data-id='<%=el._id%>'> 
           
              <ul>
                <div class="postAuthor"><%=user.nodellaUsername %></div>
            
                <div class="postTitle"> <a href="posts/<%=el._id%>" class="noStyling"> <span class="titleSpan"> <%= el.title %></span> </a> </div>
    
                <div class="postContent"><%=el.story%></div>
        
                <span><%= "Created: " + el.createdAt.toLocaleDateString('en-US') %> </span>
                </ul>
            
                <span><i class="fas fa-trash del"></i>
                </span>                 
          </li>
        
      <% }); %> 
      <% } %>
    
      </ul>
      </section>
    </section>

    <script src="js/main.js"></script>
</body>
</html>