<!DOCTYPE html>
<html lang="en">
<head>
    <title>Signup</title>
    <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="css/main.css" />
		<noscript><link rel="stylesheet" href="css/noscript.css" /></noscript>
</head>
<body class="login">

    <!--Code to return messages for credentials that dont meet the criteria-->

    

    <!-- Header -->
    <header id="header">
        <div class="content">
            <h1>Signup</h1>
            <section>
                <% if (locals && locals.messages && locals.messages.errors) { %> <% messages.errors.forEach( el => {
                %>
                <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %> <% } %>
              </section>
            <section class="form">
                <form action="/signup" method="POST">
                    <div>
                        <input 
                        type="text" 
                        id="nodellaUsername" 
                        placeholder="Username" 
                        name="nodellaUsername"
                        />
                    </div>
                    <div>
                    <input 
                    type="email" 
                    id="email" 
                    placeholder="E-mail" 
                    name="email"
                    />
                </div>
                <div>
                    <input 
                    type="password" 
                    placeholder="Password" 
                    name="password"
                    minlength="8"
                    />
                </div>
                <div>
                    <input 
                    type="password" 
                    id ="password" 
                    placeholder="Confirm Password" 
                    name="confirmPassword" 
                    minlength="8"
                    />
                </div>
                <br>
                <div>
                    <input 
                    class="button primary icon solid"
                    type="submit"
                    id="submit"
                    value="Signup"
                    />
                </div>
                </form>
                <div>
                    
                </div>
    </header>
</body>
</html>